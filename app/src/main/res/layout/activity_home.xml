<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="tech.geeksquad.localise.HomeActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/numbers_color"
        android:onClick="numbers"
        android:padding="20dp"
        android:text="Numbers" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/family_members_color"
        android:onClick="familyMembers"
        android:padding="20dp"
        android:text="Family Members" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colors_color"
        android:onClick="colors"
        android:padding="20dp"
        android:text="Colors" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/phrases_color"
        android:onClick="phrases"
        android:padding="20dp"
        android:text="Phrases" />
</LinearLayout>
